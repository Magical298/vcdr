init()
{
	setdvar("sv_hostname","^5Vistic ^7DeathRun | Round: ^5"+game["roundsplayed"]+"/"+level.dvar["round_limit"]+" ^7| ^5vistic^7-^5clan^7.^5net");
	wait 1;
	thread hostname();
}

hostname()
{
	while(1)
	{
		if(game["roundsplayed"]>level.dvar["round_limit"])
			setdvar("sv_hostname","^5Vistic ^7DeathRun | Round: ^5"+level.dvar["round_limit"]+"/"+level.dvar["round_limit"]+" ^7| ^5vistic^7-^5clan^7.^5net");
		else 
			setdvar("sv_hostname","^5Vistic ^7DeathRun | Round: ^5"+game["roundsplayed"]+"/"+level.dvar["round_limit"]+" ^7| ^5vistic^7-^5clan^7.^5net");
		wait 5;
	}
}