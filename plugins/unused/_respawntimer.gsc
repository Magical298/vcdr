#include braxi\_common;

init()
{
	if(!isdefined(level.adm_respawn_timer))
		level.adm_respawn_timer = true;

	if(!isdefined(level.adm_respawn_time))
		level.adm_respawn_time = 85;

	if(!level.freerun)
	{
		level waittill("round_started")
		thread adm_respawn_timer();
	}
}

adm_respawn_timer()
{
	iprintln("respawning will be disabled in "+level.adm_respawn_time+" seconds");

	wait level.adm_respawn_time;

	level.adm_respawn_timer = false;
	iprintln("respawning disabled");
}